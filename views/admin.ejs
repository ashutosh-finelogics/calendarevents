<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Calendar Tracking :: <%= title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
  <% if (css.plugin && css.plugin.length) { css.plugin.forEach(function(href){ %>
  <link rel="stylesheet" href="<%= href %>">
  <% }); } %>
  <% if (css.core && css.core.length) { css.core.forEach(function(href){ %>
  <link rel="stylesheet" href="<%= base_url %><%= href %>">
  <% }); } %>
  <style>#globalLoader.global-loader-off{display:none!important;visibility:hidden!important;pointer-events:none!important}</style>
</head>
<body>
  <div id="globalLoader" class="position-fixed d-flex justify-content-center align-items-center global-loader-off" style="top: 0; left: 0; right: 0; bottom: 0; background: rgba(255,255,255,0.85); z-index: 9999;">
    <div class="text-center">
      <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status"><span class="sr-only">Loading...</span></div>
      <p class="mt-2 text-secondary mb-0">Loadingâ€¦</p>
    </div>
  </div>
  <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
    <a class="navbar-brand" href="<%= base_url %>/admin">Calendar Tracking</a>
    <div class="navbar-nav ml-auto">
      <span class="nav-link text-muted"><%= username || '' %></span>
      <a class="nav-link" href="<%= base_url %>/logout">Log out</a>
    </div>
  </nav>
  <div class="container-fluid py-4">
    <%- include(path) %>
  </div>
  <input type="hidden" id="base_url" value="<%= base_url %>">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    window.showGlobalLoader = function() {
      var el = document.getElementById('globalLoader');
      if (el) { el.classList.remove('global-loader-off'); el.style.display = 'flex'; }
    };
    window.hideGlobalLoader = function() {
      var el = document.getElementById('globalLoader');
      if (el) { el.classList.add('global-loader-off'); el.style.display = 'none'; el.style.visibility = 'hidden'; }
    };
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
  <% if (js.page && js.page.length) { js.page.forEach(function(src){ %>
  <script src="<%= base_url %><%= src %>"></script>
  <% }); } %>
  <script>
    $(document).ajaxComplete(function() {
      if (typeof window.hideGlobalLoader === 'function') window.hideGlobalLoader();
    });
    $(document).on('ajaxError', function(e, xhr) {
      if (typeof window.hideGlobalLoader === 'function') window.hideGlobalLoader();
      if (xhr.status === 401) window.location.href = ($('#base_url').val() || '').replace(/\/$/, '') || '/';
    });
  </script>
</body>
</html>
