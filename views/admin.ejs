<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Calendar Tracking :: <%= title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
  <% if (css.plugin && css.plugin.length) { css.plugin.forEach(function(href){ %>
  <link rel="stylesheet" href="<%= href %>">
  <% }); } %>
  <% if (css.core && css.core.length) { css.core.forEach(function(href){ %>
  <link rel="stylesheet" href="<%= base_url %><%= href %>">
  <% }); } %>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
    <a class="navbar-brand" href="<%= base_url %>/admin">Calendar Tracking</a>
    <div class="navbar-nav ml-auto">
      <span class="nav-link text-muted"><%= username || '' %></span>
      <a class="nav-link" href="<%= base_url %>/logout">Log out</a>
    </div>
  </nav>
  <div class="container-fluid py-4">
    <%- include(path) %>
  </div>
  <input type="hidden" id="base_url" value="<%= base_url %>">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
  <% if (js.page && js.page.length) { js.page.forEach(function(src){ %>
  <script src="<%= base_url %><%= src %>"></script>
  <% }); } %>
  <script>
    $(document).on('ajaxError', function(e, xhr) {
      if (xhr.status === 401) window.location.href = $('#base_url').val() || '/';
    });
  </script>
</body>
</html>
